<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms" 
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
                  x:Class="TraineeDemoApplication.MenuPage" 
                  MasterBehavior="Popover"
                  xmlns:local="clr-namespace:TraineeDemoApplication;assembly=TraineeDemoApplication">
    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
            <StackLayout Orientation="Vertical">
                <Button Text="Page-1"  Clicked="Button_Clicked"/>
                <Button Text="Page-2" Clicked="Button_Clicked_1"/>
                <Button Text="Page-3" Clicked="Button_Clicked_2"/>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
</MasterDetailPage>  